{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('pictures/' ~ todo.image) }}" alt=""></td>
            </tr>
        </tbody>
    </table>

    <div class="mb-3">
        <a class="btn btn-success" href="{{ path('app_todo_index') }}">back to list</a>
    </div>
    <div class="mb-3">
        <a class="btn btn-warning" href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>
    </div>

    {{ include('todo/_delete_form.html.twig') }}
{% endblock %}
